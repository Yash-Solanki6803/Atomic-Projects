<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" type="text" name="postTitle" id="postTitle">
    </div>
    <div class="form-group">
        <label for="mainContent">Main Content</label>
        <textarea class="form-control" name="mainContent" id="mainContent" rows="10"></textarea>
        <label for="subContent">Sub Content</label>
        <textarea class="form-control" name="subContent" id="subContent" rows="5"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" >Publish</button>
</form>

<%- include('partials/footer'); -%>